<h2>Edit Trip</h2>

<h3><%= @trip.name %></h3>

<form method="POST" action="/trips/<%= @trip.id %>">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <label>Trip Name</label><input type="text" name="name" value="<%= @trip.name %>">
  <label>Year Visited</label><input type="text" name="year_visited" value="<%= @trip.year_visited %>" maxlength="4">
  <input type="submit" value="Update">
</form>


<a href='/trips'>See All Trips</a><br>
<a href='/trips/new'>Create New Trip</a><br>
<a href='/logout'>Log Out</a>
